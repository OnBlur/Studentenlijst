@{
    Layout = "~/_SiteLayout.cshtml";
    Page.Title = "Foto's";

    WebSecurity.RequireAuthenticatedUser();

    WebImage photo = null;
    var newFileName = "";
    var imagePath = "";

    if(IsPost){
        photo = WebImage.GetImageFromRequest();
        if(photo != null){
            newFileName = Path.GetFileName(photo.FileName);
            imagePath = @"Images\Studenten\" + newFileName;
            photo.Save(@"~\" + imagePath);
        }
    }
}

